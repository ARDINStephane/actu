<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ serie.serieShow }}">{{ serie.title }}</a>
        </h5>
        <img src="{{ serie.images.show }}" alt="card-img-top" style="width: 100%; height:auto;">
        <div id="description">
            <p class="card-text" id="collapseDescription">{{ serie.description }}</p>
        </div>
        <div class="text-primary">{{ 'serie.seasonsNumber' | trans }} : {{ serie.numberOfSeasons }}</div>
        <div class="text-primary">{{ 'serie.episodeNumber' | trans }} : {{ serie.numberOfEpisodes }}</div>
        {% if is_granted('ROLE_USER') %}
            <div class="text-primary">{{ 'serie.lastEpisode' | trans }} : {{ serie.lastEpisode }}</div>
            <a class="js-toggle-favorites" href={{ path('toggle.favorite', {'id': serie.id}) }}>
                <span class="js-toggle-favorite js-toggle-favorite btn
                    {% if serie.isfavorite == false %}
                        btn-primary
                    {% else %}
                        btn-danger
                    {% endif %}"
                >
                    {% if serie.isfavorite == false %}
                        {{ 'serie.addToFavorite' | trans }}
                    {% else %}
                        {{ 'serie.removeFromFaforite' | trans }}
                    {% endif %}
                </span>
            </a>
        {%  endif %}
    </div>
</div>
